<body>
    <div class="header">
        <h1>BLOG POST EDITOR</h1>
        <p class="subtitle">Create and manage blog posts</p>
    </div>

    <div class="editor-container">
        <div class="instructions">
            <h3>Workflow:</h3>
            <ol>
                <li>Copy HTML from Google Sheets (Apps Script auto-generates every 2 days)</li>
                <li>Paste HTML content below</li>
                <li>Add title and date</li>
                <li>Preview the post</li>
                <li>Click "Generate Post" to download the HTML file</li>
                <li>Move downloaded file to <code>/blog/</code> folder</li>
                <li>Commit and push via GitHub Desktop</li>
            </ol>
        </div>

        <form id="blogForm">
            <div class="form-group">
                <label for="title">Post Title</label>
                <input type="text" id="title" placeholder="Enter blog post title" required>
            </div>

            <div class="form-group">
                <label for="date">Publish Date</label>
                <input type="date" id="date" required>
            </div>

            <div class="form-group">
                <label for="content">Blog Post HTML</label>
                <textarea id="content" placeholder="Paste your HTML content from Google Sheets here..." required></textarea>
            </div>

            <div class="button-group">
                <button type="button" class="btn btn-secondary" onclick="previewPost()">PREVIEW POST</button>
                <button type="submit" class="btn btn-primary">GENERATE POST</button>
            </div>
        </form>

        <div class="preview" id="previewSection" style="display: none;">
            <h2>PREVIEW</h2>
            <div class="preview-content" id="previewContent"></div>
        </div>

        <div class="logout-link">
            <a href="index.html" onclick="sessionStorage.removeItem('adminAuth')">← Logout</a>
        </div>
    </div>

    <script>
        // Check authentication
        if (sessionStorage.getItem('adminAuth') !== 'true') {
            window.location.href = 'index.html';
        }

        // Set today's date as default
        document.getElementById('date').valueAsDate = new Date();

        function previewPost() {
            const content = document.getElementById('content').value;
            const previewSection = document.getElementById('previewSection');
            const previewContent = document.getElementById('previewContent');

            if (content.trim() === '') {
                alert('Please paste HTML content first');
                return;
            }

            previewContent.innerHTML = content;
            previewSection.style.display = 'block';
            previewSection.scrollIntoView({ behavior: 'smooth' });
        }

        document.getElementById('blogForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const title = document.getElementById('title').value;
            const date = document.getElementById('date').value;
            const content = document.getElementById('content').value;

            if (!title || !date || !content) {
                alert('Please fill in all fields');
                return;
            }

            // Generate filename from title and date
            const filename = generateFilename(title, date);

            // Create full HTML document
            const fullHTML = generateFullHTML(title, date, content);

            // Download the file
            downloadFile(filename, fullHTML);
        });

        function generateFilename(title, date) {
            // Format: YYYY-MM-DD-title-slug.html
            const slug = title.toLowerCase()
                .replace(/[^a-z0-9]+/g, '-')
                .replace(/^-+|-+$/g, '');
            return `${date}-${slug}.html`;
        }

        function generateFullHTML(title, date, content) {
            return `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>${title} - Michael Mancino</title>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/style.css">
    <style>
        .blog-post {
            max-width: 800px;
            margin: 100px auto 50px;
            padding: 40px;
            background: #1a1a1a;
        }

        .post-header {
            border-bottom: 2px solid #D4AF37;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .post-title {
            font-family: 'Bebas Neue', sans-serif;
            font-size: 2.5rem;
            color: #D4AF37;
            margin-bottom: 10px;
            letter-spacing: 2px;
        }

        .post-date {
            color: #888;
            font-size: 0.9rem;
        }

        .post-content {
            line-height: 1.8;
            color: #e0e0e0;
        }

        .post-content p {
            margin-bottom: 20px;
        }

        .post-content h2 {
            color: #D4AF37;
            margin-top: 30px;
            margin-bottom: 15px;
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.8rem;
        }

        .post-content h3 {
            color: #D4AF37;
            margin-top: 25px;
            margin-bottom: 12px;
            font-size: 1.3rem;
        }

        .back-link {
            text-align: center;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #333;
        }

        .back-link a {
            color: #D4AF37;
            text-decoration: none;
            font-family: 'Bebas Neue', sans-serif;
            font-size: 1.2rem;
            letter-spacing: 1px;
            transition: color 0.3s;
        }

        .back-link a:hover {
            color: #c49b2f;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">MICHAEL MANCINO</div>
            <ul class="nav-menu" id="nav-menu">
                <li><a href="../index.html">Home</a></li>
                <li><a href="../about.html">About</a></li>
                <li><a href="../book.html">The Book</a></li>
                <li><a href="../index.html#newsletter">Newsletter</a></li>
                <li><a href="../blog.html">Blog</a></li>
                <li><a href="../contact.html">Contact</a></li>
            </ul>
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>

    <div class="blog-post">
        <div class="post-header">
            <h1 class="post-title">${title}</h1>
            <p class="post-date">${formatDate(date)}</p>
        </div>

        <div class="post-content">
            ${content}
        </div>

        <div class="back-link">
            <a href="../blog-content.html">← Back to Blog</a>
        </div>
    </div>

    <script src="../js/script.js"></script>
</body>
</html>`;
        }

        function formatDate(dateStr) {
            const date = new Date(dateStr + 'T00:00:00');
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            return date.toLocaleDateString('en-US', options);
        }

        function downloadFile(filename, content) {
            const blob = new Blob([content], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);

            alert(`File "${filename}" generated successfully!\n\nNext steps:\n1. Move file to /blog/ folder\n2. Commit via GitHub Desktop\n3. Push to deploy`);
        }
    </script>
</body>
</html>
